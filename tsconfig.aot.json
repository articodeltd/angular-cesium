{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./node_modules/@types/core-js"
  ],
  "files": [
    "./src/main.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
